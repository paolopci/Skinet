            {
              "name": "302 Found",
              "originalRequest": {
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/api/buggy/redirect-products",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
