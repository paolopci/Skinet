                }
              },
              "status": "Found",
              "code": 302,
              "_postman_previewlanguage": "text",
              "body": ""
            }
          ],
          "event": [
            {
              "script": {
                "exec": [
                  "pm.test(\"Status 302 (o 200 se redirect seguito)\", function () {",
                  "  pm.expect([302, 200]).to.include(pm.response.code);",
                  "});",
                  "pm.test(\"Redirect verso products\", function () {",
                  "  if (pm.response.code === 302) {",
                  "    pm.expect(pm.response.headers.get(\"Location\")).to.eql(\"/api/products\");",
                  "    return;",
                  "  }",
                  "",
                  "  const payload = pm.response.json();",
                  "  pm.expect(payload).to.be.an(\"object\");",
                  "  pm.expect(payload).to.have.property(\"data\");",
                  "});"
                ],
                "type": "text/javascript"
              },
              "listen": "test"
            }
