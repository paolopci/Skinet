{
  "info": {
    "name": "Skinet - Payments",
    "_postman_id": "f39de4d2-2d77-4cca-b5cc-0f90f3b8bdb3",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection per test flussi Payments. Sequenza raccomandata: Setup -> Happy Path -> Negative Path -> Cleanup."
  },
  "item": [
    {
      "name": "Setup",
      "item": [
        {
          "name": "Setup - 1 Account - Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/account/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "account",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test(\"Token presente\", function () {",
                  "  pm.expect(data.token).to.be.a(\"string\").and.not.empty;",
                  "});",
                  "pm.collectionVariables.set(\"authToken\", data.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Setup - 2 Cart - Update Cart (small price)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{cartId}}\",\n  \"items\": [\n    {\n      \"productId\": {{productId}},\n      \"productName\": \"{{productName}}\",\n      \"price\": {{smallPriceA}},\n      \"quantity\": {{quantityA}},\n      \"pictureUrl\": \"{{pictureUrl}}\",\n      \"brand\": \"{{brand}}\",\n      \"type\": \"{{type}}\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test(\"Carrello valido\", function () {",
                  "  pm.expect(data.id).to.eql(pm.collectionVariables.get(\"cartId\"));",
                  "  pm.expect(data.items).to.be.an(\"array\");",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Setup - 3 Payments - Get Delivery Methods",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/payments/delivery-methods",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "delivery-methods"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test(\"Lista delivery methods\", function () {",
                  "  pm.expect(data).to.be.an(\"array\");",
                  "});",
                  "if (data.length > 0 && data[0].id) {",
                  "  pm.collectionVariables.set(\"deliveryMethodId\", data[0].id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Setup - 4 Cart - Update Cart with DeliveryMethod",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{cartId}}\",\n  \"deliverMethodId\": {{deliveryMethodId}},\n  \"items\": [\n    {\n      \"productId\": {{productId}},\n      \"productName\": \"{{productName}}\",\n      \"price\": {{smallPriceB}},\n      \"quantity\": {{quantityB}},\n      \"pictureUrl\": \"{{pictureUrl}}\",\n      \"brand\": \"{{brand}}\",\n      \"type\": \"{{type}}\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ],
      "description": "Preparazione contesto: login, carrello e delivery method."
    },
    {
      "name": "Payments - Happy Path",
      "item": [
        {
          "name": "Payments - Happy Path - 1 Create or Update Payment Intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{cartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "{{cartId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test(\"Campi Stripe valorizzati\", function () {",
                  "  pm.expect(data.paymentIntentId).to.be.a(\"string\").and.not.empty;",
                  "  pm.expect(data.clientSecret).to.be.a(\"string\").and.not.empty;",
                  "});",
                  "pm.collectionVariables.set(\"paymentIntentId\", data.paymentIntentId);",
                  "pm.collectionVariables.set(\"clientSecret\", data.clientSecret);"
                ]
              }
            }
          ]
        },
        {
          "name": "Payments - Happy Path - 2 Create or Update Payment Intent Again",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{cartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "{{cartId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.test(\"PaymentIntent ancora presente\", function () {",
                  "  pm.expect(data.paymentIntentId).to.be.a(\"string\").and.not.empty;",
                  "  pm.expect(data.clientSecret).to.be.a(\"string\").and.not.empty;",
                  "});"
                ]
              }
            }
          ]
        }
      ],
      "description": "Flusso positivo con creazione/aggiornamento payment intent."
    },
    {
      "name": "Payments - Negative Path",
      "item": [
        {
          "name": "Payments - Negative Path - 1 Create Payment Intent Without Token",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{cartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "{{cartId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 401\", function () {",
                  "  pm.response.to.have.status(401);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Payments - Negative Path - 2 Create Payment Intent Invalid CartId",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{invalidCartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "{{invalidCartId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 400\", function () {",
                  "  pm.response.to.have.status(400);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Payments - Negative Path - 3 Cart - Update Cart Invalid DeliveryMethod",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{cartId}}\",\n  \"deliverMethodId\": {{invalidDeliveryMethodId}},\n  \"items\": [\n    {\n      \"productId\": {{productId}},\n      \"productName\": \"{{productName}}\",\n      \"price\": {{smallPriceC}},\n      \"quantity\": {{quantityC}},\n      \"pictureUrl\": \"{{pictureUrl}}\",\n      \"brand\": \"{{brand}}\",\n      \"type\": \"{{type}}\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Payments - Negative Path - 4 Create Payment Intent With Invalid DeliveryMethod",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{cartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "{{cartId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 400\", function () {",
                  "  pm.response.to.have.status(400);",
                  "});"
                ]
              }
            }
          ]
        }
      ],
      "description": "Flusso negativo: token mancante, cartId/delivery invalidi."
    },
    {
      "name": "Cleanup",
      "item": [
        {
          "name": "Cleanup - 1 Cart - Delete",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart?id={{cartId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ],
              "query": [
                {
                  "key": "id",
                  "value": "{{cartId}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status 204\", function () {",
                  "  pm.response.to.have.status(204);",
                  "});"
                ]
              }
            }
          ]
        }
      ],
      "description": "Pulizia finale del carrello di test."
    }
  ],
